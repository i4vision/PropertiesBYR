FROM node:20-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm ci || npm install

# Copy source code
COPY server.js ./
COPY supabaseClient.ts ./
COPY types.ts ./

# Expose port 8085
EXPOSE 8085

# Set environment variables (will be overridden by docker-compose)
ENV PORT=8085

# Start the server
CMD ["node", "server.js"]
